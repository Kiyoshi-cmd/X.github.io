      Join Now
    </a>
  </div>
  <script>
    // Modern animated background: softly glowing, floating colored blobs
    const canvas = document.getElementById('bg-canvas');
    const ctx = canvas.getContext('2d');
    let w = 0, h = 0;

    function resize() {
      w = window.innerWidth;
      h = window.innerHeight;
      canvas.width = w;
      canvas.height = h;
    }
    window.addEventListener('resize', resize);
    resize();

    // Blobs
    const blobs = [];
    const colors = [
      "rgba(88,101,242,0.16)",   // Discord blurple
      "rgba(64,78,237,0.13)",    // Lighter
      "rgba(169,139,255,0.10)",  // Accent
      "rgba(36, 40, 86, 0.17)",  // Night blue
      "rgba(228,230,255,0.07)"   // Subtle white
    ];
    const blobCount = Math.max(7, Math.floor((w * h) / 180000));
    for(let i=0; i<blobCount; i++){
      const rBase = 170 + Math.random()*100 * (w<700 ? 0.4 : 1);
      blobs.push({
        x: Math.random() * w,
        y: Math.random() * h,
        r: rBase,
        color: colors[Math.floor(Math.random()*colors.length)],
        dx: (Math.random()-0.5) * 0.24,
        dy: (Math.random()-0.5) * 0.24,
        t: Math.random()*Math.PI*2,
        spd: 0.001 + Math.random()*0.0006
      });
    }

    function animate() {
      ctx.clearRect(0,0,w,h);
      for(const b of blobs){
        b.t += b.spd;
        b.x += Math.sin(b.t)*0.7 + b.dx;
        b.y += Math.cos(b.t)*0.7 + b.dy;

        // Wrap
        if(b.x < -b.r) b.x = w + b.r;
        if(b.x > w + b.r) b.x = -b.r;
        if(b.y < -b.r) b.y = h + b.r;
        if(b.y > h + b.r) b.y = -b.r;

        // Draw blob
        ctx.beginPath();
        ctx.arc(b.x, b.y, b.r, 0, 2*Math.PI);
        ctx.fillStyle = b.color;
        ctx.shadowColor = b.color.replace('0.', '0.5');
        ctx.shadowBlur = 48;
        ctx.globalAlpha = 1;
        ctx.fill();
        ctx.shadowBlur = 0;
      }
      requestAnimationFrame(animate);
    }
    animate();
  </script>
